<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sleep Tracking"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:marginBottom="16dp"/>

    <EditText
        android:id="@+id/etSleepTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Sleep Time (HH:mm)"
        android:inputType="time"/>

    <EditText
        android:id="@+id/etWakeTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Wake Time (HH:mm)"
        android:inputType="time"
        android:marginBottom="16dp"/>

    <Button
        android:id="@+id/btnCalculateSleep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate Sleep"
        android:marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvSleepDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sleep Duration: "
        android:marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvSleepQuality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sleep Quality: "
        android:marginBottom="16dp"/>

    <Button
        android:id="@+id/btnSaveData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Data"/>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="16dp"/>
</LinearLayout>
